@{
    ViewData["Title"] = "Reaccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reaccion</h2>

@(Html.DevExtreme().DataGrid<ProyectoLinkedinMVC.Models.Reaccion>()
    .DataSource(ds => ds.WebApi()
        .Controller("Reaccion")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Nombre);

        columns.AddFor(m => m.Contenido);

        columns.AddFor(m => m.UsuarioID);

        columns.AddFor(m => m.ComentarioID);

        columns.AddFor(m => m.PublicacionID);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
